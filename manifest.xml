<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <!-- Basic Add-in Information -->
  <Id>b8e3d7f2-4c5a-4d6e-9f1a-3c6d8e9f2b4c</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>IT-SIMO - Nikolai NÃ¶thling</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Information -->
  <DisplayName DefaultValue="SIMO IT Ticket System"/>
  <Description DefaultValue="Submit IT support tickets directly from Outlook. Quick access to the IT ticket submission form for reporting issues and requesting assistance."/>
  
  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/icon80.png"/>
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://github.com/nikolai-SIMO/SIMO_IT-Ticket-System"/>
  
  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://nikolai-simo.github.io</AppDomain>
    <AppDomain>https://forms.office.com</AppDomain>
    <AppDomain>https://forms.microsoft.com</AppDomain>
  </AppDomains>
  
  <!-- Host Applications -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/index.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Activation Rules -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides for Modern Outlook -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          
          <!-- Message Compose Command Surface -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ITTicketGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Title"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Message Read Command Surface -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ITTicketGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Title"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
        
      </Host>
    </Hosts>
    
    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/icon16.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/icon32.png"/>
        <bt:Image id="Icon.80" DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/icon80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/index.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://nikolai-simo.github.io/SIMO_IT-Ticket-System/index.html"/>
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="IT Support"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Submit Ticket"/>
        <bt:String id="TaskpaneButton.Title" DefaultValue="IT Ticket System"/>
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open the IT ticket submission form to report issues or request assistance from the IT support team"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
  
</OfficeApp>
